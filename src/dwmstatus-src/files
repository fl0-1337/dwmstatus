#!/bin/sh
disk(){
	rootfree=$(df -h | awk '$6=="/"{print $4}')
	homefree=$(df -h | awk '$6=="/home"{print $4}')

	# echo  "[ ğŸ–¥${rootfree} ğŸ ${homefree} ]"
	# echo  "[ ğŸ–¥${rootfree} ]"
	echo  "[ ğŸ ${homefree} ]"
}



mounts(){
	mounted=$(df -h | awk '$1~/\/dev|mtp/&&$1!~/sda/{printf "%s (%s) ",$6,$4}')

	[ ! -z "${mounted}" ] && echo "[ â†${mounted}]"
}
